FILENAME=$2
OPTION=$1

if [ $OPTION == -b ];then
    sshpass -p 'password' scp -r $FILENAME username@host:~/public_html/pages/blogs/;
fi
if [ $OPTION == -p ];then
    sshpass -p 'password' scp -r $FILENAME username@host:~/public_html/pages/;
fi 
if [ $OPTION == -i ];then
    sshpass -p 'password' scp -r $FILENAME username@host:~/public_html/;
fi 
if [ $OPTION == -s ];then
    sshpass -p 'password' scp -r $FILENAME username@host:~/public_html/scripts/;
fi 
if [ $OPTION == -c ];then
    sshpass -p 'password' scp -r $FILENAME username@host:~/public_html/css/;
fi 

echo -e "$FILENAME pushed!"
